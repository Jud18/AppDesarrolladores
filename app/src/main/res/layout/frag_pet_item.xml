<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.admin.proyectos.appdesarrolladores.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/list_item_background" >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imgItem"
            app:srcCompat="@drawable/ic_project_item" />

        <TextView
            android:id="@+id/itemFolio"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemName"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/itemEmpresa"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemEmpresa"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="60dp"
            android:textAlignment="center"
            android:textStyle="italic" />
    </RelativeLayout>

</RelativeLayout>